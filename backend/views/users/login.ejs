<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="note-card">
      <h2 class="mb-4 text-center">üîê Login</h2>
      <form action="/users/user-login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" name="username" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" required>
          <button type="button" class="btn btn-outline-secondary mt-3" id="togglePassword">show/hide password</button>
        </div>
        <button type="submit" class="btn btn-success w-100">Login</button>
      </form>
      <div>
        <p>or</p>
        <div>Signup here: <a href="/users/user-signup" class="btn btn-primary btn-lg mt-3 px-5">Signup</a></div>
      </div>
    </div>
  </div>
</div>
<script>
  const togglePassword = document.getElementById('togglePassword');
  const passwordInput = document.getElementById('password');

  togglePassword.addEventListener('click', function () {
    const isPassword = passwordInput.type === 'password';
    passwordInput.type = isPassword ? 'text' : 'password';
    this.textContent = isPassword ? 'Hide' : 'Show';
  });
</script>